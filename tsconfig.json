{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@/assets/*": [
        "src/assets/*"
      ],
      "@mui/styled-engine": [
        "@mui/styled-engine-sc"
      ]
    }
  },
  "include": [
    "src", "global.d.ts"
  ],
  "exclude": [
    "**/node_modules",
    "**/build",
    "**/__tests__",
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
